{% extends 'base.html.twig' %}

{% block title %}Fastest way to get the weather{% endblock %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

       {#Initialisation du formulaire#}
        <div class="container">
            <div class="mb-3">
                {{ form_start(weatherForm) }}
            </div>
            <div class="mb-3">
                {{ form_widget(weatherForm) }}
            </div>
            <button type="button" class="btn btn-success" onclick="fetchWeather()">Submit</button>
            {{ form_end(weatherForm) }}
        </div>
       {#Infos m√©teo#}
        <div class="example-wrapper">
            <h1 id="name"></h1>
            <p id="desc"></p>
            <p id="temp"></p>
        </div>

    <script type="text/javascript">
      function activatePlacesSearch(){
          //recuperation de l'entrer user
        let input = document.getElementById('weather_form_city');
        let  autocomplete = new google.maps.places.Autocomplete(input);
      }
    </script>
    {#  insertion de l'API de google  #}
    <script async src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCcGAJIRaCDOGIw0GHUBPlMtDH29CVA3ug&libraries=places&callback=activatePlacesSearch"></script>
    {% block javascripts %}
