{% extends 'base.html.twig' %}

{% block title %}Hello WeatherController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
  <form>
  <div class="mb-3">
    <label for="cityInput" class="form-label">City</label>
    <input type="text" class="form-control" id="cityInput" aria-describedby="enter the city">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
<script type="text/javascript">
  function activatePlacesSearch(){
    let input = document.getElementById('cityInput');
    let = autocomplete = new google.maps.places.Autocomplete(input);
  }
</script>
<script async src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCcGAJIRaCDOGIw0GHUBPlMtDH29CVA3ug&libraries=places&callback=activatePlacesSearch"></script>
{% endblock %}
